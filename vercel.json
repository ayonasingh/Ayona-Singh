{
  "buildCommand": "cd react-portfolio && npm ci && npm run build && cd .. && mkdir -p dist && cp -r react-portfolio/dist/* dist/",
  "outputDirectory": "dist",
  "installCommand": "cd backend && npm ci",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
